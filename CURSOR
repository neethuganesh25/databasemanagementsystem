CREATE TABLE FIXED1(ACCNO NUMBER(10),YEARS NUMBER(4),AMOUNT NUMBER(5),INTEREST NUMBER(3));
INSERT INTO FIXED1(ACCNO,YEARS,AMOUNT) VALUES (:ACCNO,:YEARS,:AMOUNT);
SELECT * FROM FIXED1;
DECLARE
CURSOR CUR IS SELECT * FROM FIXED1;
BEGIN
FOR I IN CUR
LOOP
IF I.YEARS<=2 THEN 
UPDATE FIXED1 SET INTEREST=I.AMOUNT*0.09*(1/12) WHERE ACCNO=I.ACCNO;
ELSIF
I.YEARS>=2 AND I.YEARS<=5 THEN 
UPDATE FIXED1 SET INTEREST=I.AMOUNT*0.11*(1/12) WHERE ACCNO=I.ACCNO;
ELSE
UPDATE FIXED1 SET INTEREST=I.AMOUNT*0.15*(1/12) WHERE ACCNO=I.ACCNO;
END IF;
END LOOP;
END
 
